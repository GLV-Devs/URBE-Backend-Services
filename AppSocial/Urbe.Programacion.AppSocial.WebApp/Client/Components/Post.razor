@inject SocialApiClient Client
@inject NavigationManager Nav
@using System.Diagnostics;

@if (PostData is null)
{
    <div class="post">
        <div class="postHeader">
        </div>
        <p style="font-style: italic">null</p>
    </div>
}
else
{
    <div class="FullPost">
        <div class="Post">
            <div class="postHeader" @onclick="GoToUser">
                <img class="profilePic" src="@PostData.Poster.GetUserProfilePic()" />
                <h3 class="usuarioPost">@PostData.Poster!.Username</h3>
                <span class="pronouns">@PostData.Poster.Pronouns</span>
            </div>
            <p class="post-content">@PostData.Content</p>
            <div class="postFooter">
                <span class="date">Publicado en @PostData.DatePosted.RenderPostTime() bajo '@PostData.PosterThenUsername'</span>
                <button class="borrar oi oi-delete" @onclick="DeletePost"></button>
            </div>
        </div>
    </div>
    
}
