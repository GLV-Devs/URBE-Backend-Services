@page
@model Urbe.Programacion.AppVehiculos.WebApp.Pages.Identity.LogInModel
@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="text-center">
    <h1 class="display-4">Inicio de Sesión</h1>
    <h2>Por favor, introduzca sus datos</h2>
</div>
<div>
    <br />
    <div class="card align-items-center">
        @if (Model.Errors.Count > 0)
        {
            <br />
            <div class="error-box" />

            @foreach (var error in Model.Errors.Errors)
            {
                <p class="error-line">@error.DefaultMessageES</p>
            }
        }

        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label for="inputEmail">Usuario o Correo Electrónico</label>
                    <input type="text" class="form-control" id="inputEmail" name="UserName" placeholder="Introduzca su usuario o correo electrónico">
                </div>
                <br />
                <div class="form-group">
                    <label for="inputPassword">Contraseña</label>
                    <input type="password" class="form-control" id="inputPassword" name="Password" placeholder="Introduzca su contraseña">
                </div>
                <br />
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" id="checkStayLoggedIn" name="StayLoggedIn">
                    <label class="form-check-label" for="StayLoggedIn">Dejar sesión abierta cuando cierre el navegador</label>
                </div>
                <br />
                <button type="submit" class="center btn btn-primary">Entrar</button>
                <br /> <br />

                <small class="form-text text-muted privacy-notice">@PrivacyModel.PrivacyNotice</small>
            </form>
        </div>
    </div>
</div>